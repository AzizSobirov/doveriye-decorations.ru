---
interface Props {
  main?: boolean;
}

const { main = false } = Astro.props;
---

<div class="page-header" class:list={main ? "--main" : ""}>
  <div class="container">
    <div class="page-header__nav">
      <div class="page-header__nav-btn" onclick="toggleNav()">
        <Img src="icons/menu.svg" only />
        <Img src="icons/close.svg" only />
      </div>
      <a href="/" class="page-header__nav-logo"><Img src="logo.svg" only /></a>
    </div>
    <div class="page-header__content">
      <a href="tel:+79888888888" class="text-xl xl:text-2xl">
        +7 988 888-88-88
      </a>
      <Button
        label="ЗАКАЗАТЬ ЗВОНОК"
        variant="outline"
        action="openPopup('form', 'ЗАКАЗАТЬ ЗВОНОК')"
      />
    </div>
  </div>
</div>
